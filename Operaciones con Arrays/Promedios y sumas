using System;

namespace Excercise01
{
    class Program
    {
        static void Main(string[] args)
        {
            int [] array = new int[4];
            int suma=0;

            for(int i=0; i < 4; i++)
            {
                Console.WriteLine("Debes introducir 4 números. Has ingresado {0} numéro/s ", i+1);
                array[i] = Convert.ToInt32(Console.ReadLine());
            }

            foreach (int media in array)
            {
                suma += media;
            }
            int promedio = suma / array.Length;
            Console.WriteLine("La media es {0}", promedio);




        }
    }
}
